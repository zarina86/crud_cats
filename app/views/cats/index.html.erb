<p style="color: green"><%= notice %></p>

<div id="cats" class="buffer">
  <%= paginate @cats %>
  <div class="buffer-both">
  <%= search_form_for @q, html: {"data-controller": "filters", "data-turbo-frame": "table"} do |f| %>
    
    <div class="buffer-small">
    <% f.label :name_cont %>
    <%= f.search_field :name_cont, "data-action": "filters#submit", placeholder: "name", class: "form-control" %>
    </div>

    <div class="buffer-small">
    <% f.label :color_cont %>
    <%= f.search_field :color_cont, "data-action": "filters#submit", placeholder: "color", class: "form-control" %>
    </div>

    <div class="buffer-small">
    <% f.label :breed_cont %>
    <%= f.search_field :breed_cont, "data-action": "filters#submit", placeholder: "breed", class: "form-control" %>
    </div>
  <% end %>
  </div>
  <%= turbo_frame_tag "table" do %>
   <p class="loading">Loading...</p>

  <table class="table table-hover table-bordered">
    <%= link_to "New", new_cat_path %>     
  <thead>
    <h1>Cats</h1>
    <tr>
      <th><%= sort_link @q, :id, "ID" %></th>
      <th><%= sort_link @q, :name, "Name" %></th>
      <th><%= sort_link @q, :color, "Color" %></th>
      <th><%= sort_link @q, :breed, "Breed" %></th>
    </tr>
  </thead>
  <tbody>
    <% @cats.each do |cat| %>
      <tr>
        <td><%= cat.id %></td>
        <td><%= cat.name %></td>
        <td><%= cat.color %></td>
        <td><%= cat.breed %></td> 
        <td>
          <div class="dropdown">
            <button class="btn btn-success btn-sm dropdown-toggle" type="button" 
            id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
              Actions
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li><%= link_to "Show", cat, class: "dropdown-item" %></li>
              <li><%= link_to "Edit", edit_cat_path(cat), class: "dropdown-item" %></li>
              <li><%= button_to "Destroy", cat, method: :delete, form: { data: { turbo_confirm: "Are you sure?"}}, class: "dropdown-item" %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
  
  <%= paginate @cats %>
</div>
<% end %>
