<div class="buffer-both">
  <%= search_form_for @q do |f| %> 
    <div class="buffer-small">
      <% f.label :name_cont %>
      <%= f.search_field :name_cont, placeholder: "name", 
          class: "form-control" %>
    </div>

    <div class="buffer-small form-select">
      <% f.label :color_cont %>
      <%= f.select :color_cont, (Cat.all.collect { |cat| cat.color }).uniq,
        placeholder: "color", include_blank: true, class: "form-control" %>
    </div>

    <div class="buffer-small form-select">
      <% f.label :breed_cont %>
      <%= f.select :breed_cont, (Cat.all.collect { |cat| cat.breed }).uniq,
        placeholder: "breed", include_blank: true, class: "form-select" %>
    </div>
    
    <div class="buffer-small">
      <%= f.submit class: "form-control" %>
    </div>
  <% end %>
</div>
  